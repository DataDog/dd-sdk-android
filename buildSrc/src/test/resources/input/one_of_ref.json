{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Household",
  "type": "object",
  "properties": {
    "pets": {
      "type": "array",
      "items": {
        "$ref": "one_of.json"
      },
      "readOnly": true
    },
    "situation": {
      "oneOf": [
        {
          "type" : "object",
          "title": "Marriage",
          "properties": {
            "spouses": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "spouses"
          ]
        },
        {
          "type" : "object",
          "title": "Cotenancy",
          "properties": {
            "roommates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "roommates"
          ]
        },
        {
          "type": "integer"
        }
      ]
    }
  }
}