{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/product.schema.json",
  "title": "User",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/email"
    },
    {
      "$ref": "#/definitions/identity"
    },
    {
      "properties": {
        "contact_type": {
          "enum": [
            "personal",
            "professional"
          ]
        }
      },
      "required": [ "contact_type" ]
    }
  ],
  "definitions": {
    "email": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "host": {
          "type": "string"
        }
      },
      "required": [
        "username",
        "host"
      ]
    },
    "identity": {
      "type": "object",
      "properties": {
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        }
      },
      "required": [
        "lastname"
      ]
    }
  }
}