{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "span-schema.json",
  "title": "SpanEvent",
  "type": "object",
  "description": "Schema of a Span Event",
  "required": [
    "traceId",
    "spanId",
    "parentId",
    "resource",
    "name",
    "service",
    "duration",
    "start",
    "error",
    "type",
    "meta",
    "metrics"
  ],
  "properties": {
    "traceId": {
      "type": "string",
      "description": "The id of the trace this Span belongs to",
      "readOnly": true
    },
    "spanId": {
      "type": "string",
      "description": "The unique id of this Span",
      "readOnly": true
    },
    "parentId": {
      "type": "string",
      "description": "The id of the parent Span in this trace",
      "readOnly": true
    },
    "resource": {
      "type": "string",
      "description": "The resource name"
    },
    "name": {
      "type": "string",
      "description": "The name of this Span"
    },
    "service": {
      "type": "string",
      "description": "The service name"
    },
    "duration": {
      "type": "integer",
      "description": "The duration of this Span in nanoseconds",
      "readOnly": true
    },
    "start": {
      "type": "integer",
      "description": "The Span start time in nanoseconds",
      "readOnly": true
    },
    "error": {
      "type": "integer",
      "description": "Span error flag. If 1 that means there was an error thrown during the duration of the Span",
      "readOnly": true,
      "default": 0
    },
    "type": {
      "type": "string",
      "description": "The type of the Span. For Mobile this will always be 'CUSTOM'",
      "const": "custom"
    },
    "metrics": {
      "type": "object",
      "description": "The metrics data of this Span event",
      "properties": {
        "_top_level": {
          "type": "integer",
          "description": "Top level flag. If 1 means that this Span is the root of this Trace",
          "readOnly": true
        }
      },
      "additionalProperties": {
        "type": "number",
        "description": "additional metrics"
      }
    },
    "meta": {
      "type": "object",
      "description": "The metadata of this Span event",
      "properties": {
        "version": {
          "type": "string",
          "description": "The client application package version",
          "readOnly": true
        },
        "_dd": {
          "type": "object",
          "properties": {
            "source": {
              "type": "string",
              "description": "The trace source",
              "const": "android"
            }
          }
        },
        "span": {
          "type": "object",
          "properties": {
            "kind": {
              "type": "string",
              "description": "The type of the Span",
              "const": "client"
            }
          }
        },
        "tracer": {
          "type": "object",
          "properties": {
            "version": {
              "type": "string",
              "description": "The SDK version name",
              "readOnly": true
            }
          },
          "required": [
            "version"
          ]
        },
        "usr": {
          "type": "object",
          "description": "User properties",
          "properties": {
            "id": {
              "type": "string",
              "description": "Identifier of the user",
              "readOnly": true
            },
            "name": {
              "type": "string",
              "description": "Name of the user",
              "readOnly": true
            },
            "email": {
              "type": "string",
              "description": "Email of the user",
              "readOnly": true
            }
          },
          "additionalProperties": {
            "type": "object"
          },
          "readOnly": true
        },
        "network": {
          "type": "object",
          "description": "The network information in the moment the Span was created",
          "properties": {
            "client": {
              "type": "object",
              "properties": {
                "sim_carrier_id": {
                  "type": "string"
                },
                "sim_carrier_name": {
                  "type": "string"
                },
                "signal_strength": {
                  "type": "string"
                },
                "downlink_kbps": {
                  "type": "string"
                },
                "uplink_kbps": {
                  "type": "string"
                },
                "connectivity": {
                  "type": "string",
                  "description": "The active network",
                  "readOnly": true
                }
              },
              "required": [
                "connectivity"
              ]
            }
          },
          "required": [
            "client"
          ]
        }
      },
      "required": [
        "version",
        "_dd",
        "span",
        "tracer",
        "usr",
        "network"
      ],
      "additionalProperties": {
        "type": "string",
        "description": "additional metadata attributes"
      }
    }
  }
}
