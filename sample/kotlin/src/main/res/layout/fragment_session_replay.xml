<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".NavActivity">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:padding="10dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/navigation_text_view_components"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/text_view_components"
            android:drawableStart="@drawable/baseline_text_fields_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/navigation_picker_components"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/picker_components"
            android:drawableStart="@drawable/baseline_edit_calendar_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigation_text_view_components"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/navigation_radio_and_checkbox_components"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/radio_and_check_box_components"
            android:drawableStart="@drawable/baseline_radio_button_checked_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigation_picker_components"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/navigation_dropdowns_and_switchers_components"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/dropdowns_and_switchers_components"
            android:drawableStart="@drawable/baseline_arrow_drop_down_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigation_radio_and_checkbox_components"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
