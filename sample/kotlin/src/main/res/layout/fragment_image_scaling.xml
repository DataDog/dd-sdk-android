<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imageViewWithoutScaling"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@android:color/holo_green_light"
                    android:src="@drawable/example_appwidget_preview"
                    android:contentDescription="@string/title_imagebuttons"
                    android:layout_marginStart="10dp"
                    />

                <ImageView
                    android:id="@+id/imageViewFitXY"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@android:color/holo_green_light"
                    android:src="@drawable/example_appwidget_preview"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/title_imagebuttons"
                    android:layout_marginStart="10dp"
                    />

                <ImageView
                    android:id="@+id/imageViewFitStart"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@android:color/holo_green_light"
                    android:src="@drawable/example_appwidget_preview"
                    android:scaleType="fitStart"
                    android:contentDescription="@string/title_imagebuttons"
                    android:layout_marginStart="10dp"
                    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imageViewFitEnd"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@android:color/holo_green_light"
                    android:src="@drawable/example_appwidget_preview"
                    android:scaleType="fitEnd"
                    android:contentDescription="@string/title_imagebuttons"
                    android:layout_marginStart="10dp"
                    />

                <ImageView
                    android:id="@+id/imageViewFitCenter"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@android:color/holo_green_light"
                    android:src="@drawable/example_appwidget_preview"
                    android:scaleType="center"
                    android:contentDescription="@string/title_imagebuttons"
                    android:layout_marginStart="10dp"
                    />

                <ImageView
                    android:id="@+id/imageViewCenterCrop"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@android:color/holo_green_light"
                    android:src="@drawable/example_appwidget_preview"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/title_imagebuttons"
                    android:layout_marginStart="10dp"
                    />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imageViewCenterInside"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@android:color/holo_green_light"
                    android:src="@drawable/example_appwidget_preview"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/title_imagebuttons"
                    android:layout_marginStart="10dp"
                    />

                <ImageView
                    android:id="@+id/imageViewMatrix"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@android:color/holo_green_light"
                    android:src="@drawable/example_appwidget_preview"
                    android:scaleType="matrix"
                    android:contentDescription="@string/title_imagebuttons"
                    android:layout_marginStart="10dp"
                    />

        </LinearLayout>

</LinearLayout>