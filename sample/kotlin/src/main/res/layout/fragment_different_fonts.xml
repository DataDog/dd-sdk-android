<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/default_typeface_field_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="normal"
        android:text="@string/default_typeface_label"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/default_typeface_field_label"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/default_typeface_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="normal"
        android:text="@string/random_text_value"/>

    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/default_typeface_field"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/serif_typeface_field_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:textStyle="bold"
        android:text="@string/sans_typeface_label"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/serif_typeface_field_label"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/serif_typeface_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:text="@string/random_text_value"/>

    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/serif_typeface_field"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/sans_serif_typeface_field_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textStyle="bold"
        android:text="@string/sans_serif_typeface_label"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/sans_serif_typeface_field_label"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/sans_serif_typeface_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:text="@string/random_text_value"/>

    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/sans_serif_typeface_field"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/monospace_typeface_field_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textStyle="bold"
        android:text="@string/monospace_typeface_label"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/monospace_typeface_field_label"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/monospace_typeface_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:text="@string/random_text_value"/>

</androidx.constraintlayout.widget.ConstraintLayout>