package com.datadog.android.flags.featureflags.internal.repository.net

import com.datadog.android.api.InternalLogger
import com.datadog.android.flags.featureflags.internal.model.DatadogEvaluationContext
import com.datadog.android.flags.featureflags.internal.model.FlagsContext
import com.datadog.android.flags.featureflags.model.EvaluationContext
import fr.xgouchet.elmyr.annotation.StringForgery
import fr.xgouchet.elmyr.junit5.ForgeExtension
import okhttp3.mockwebserver.MockResponse
import okhttp3.mockwebserver.MockWebServer
import okhttp3.mockwebserver.RecordedRequest
import org.assertj.core.api.Assertions.assertThat
import org.junit.jupiter.api.AfterEach
import org.junit.jupiter.api.BeforeEach
import org.junit.jupiter.api.Test
import org.junit.jupiter.api.extension.ExtendWith

import org.mockito.Mock

import org.mockito.junit.jupiter.MockitoExtension
import org.mockito.junit.jupiter.MockitoSettings
import org.mockito.kotlin.any
import org.mockito.kotlin.argumentCaptor
import org.mockito.kotlin.verify
import org.mockito.quality.Strictness
import java.util.concurrent.TimeUnit

@ExtendWith(MockitoExtension::class, ForgeExtension::class)
@MockitoSettings(strictness = Strictness.LENIENT)
internal class DefaultFlagsNetworkManagerTest {

    @Mock
    lateinit var mockInternalLogger: InternalLogger

    @StringForgery
    lateinit var fakeClientToken: String

    @StringForgery
    lateinit var fakeApplicationId: String

    @StringForgery
    lateinit var fakeTargetingKey: String

    @StringForgery
    lateinit var fakeAttributeKey: String

    @StringForgery
    lateinit var fakeAttributeValue: String

    private lateinit var mockWebServer: MockWebServer
    private lateinit var flagsContext: FlagsContext
    private lateinit var networkManager: DefaultFlagsNetworkManager

    @BeforeEach
    fun setUp() {
        mockWebServer = MockWebServer()
        mockWebServer.start()

        flagsContext = FlagsContext(
            clientToken = fakeClientToken,
            applicationId = fakeApplicationId,
            site = "datadoghq.com",
            env = "test"
        )

        networkManager = DefaultFlagsNetworkManager(
            internalLogger = mockInternalLogger,
            flagsContext = flagsContext
        )

        // Override the call factory to use our mock server
        networkManager.callFactory = object : DefaultFlagsNetworkManager.OkHttpCallFactory {
            override fun newCall(request: okhttp3.Request): okhttp3.Call {
                val client = okhttp3.OkHttpClient.Builder()
                    .build()
                // Replace the URL to point to our mock server
                val mockRequest = request.newBuilder()
                    .url(mockWebServer.url("/precompute-assignments"))
                    .build()
                return client.newCall(mockRequest)
            }
        }
    }

    @AfterEach
    fun tearDown() {
        mockWebServer.shutdown()
    }

    @Test
    fun `M download flags successfully W downloadPrecomputedFlags() { valid response }`() {
        // Given
        val expectedResponse = """
        {
            "data": {
                "attributes": {
                    "flags": {
                        "test-flag": {
                            "variationType": "boolean",
                            "variationValue": true,
                            "doLog": true,
                            "allocationKey": "test-allocation",
                            "variationKey": "test-variation",
                            "extraLogging": {},
                            "reason": "test-reason"
                        }
                    }
                }
            }
        }
        """.trimIndent()

        mockWebServer.enqueue(
            MockResponse()
                .setResponseCode(200)
                .setBody(expectedResponse)
        )

        val context = DatadogEvaluationContext(
            targetingKey = fakeTargetingKey,
            attributes = mapOf(fakeAttributeKey to fakeAttributeValue)
        )

        // When
        val result = networkManager.downloadPrecomputedFlags(context)

        // Then
        assertThat(result).isEqualTo(expectedResponse)

        val recordedRequest = mockWebServer.takeRequest(5, TimeUnit.SECONDS)
        assertThat(recordedRequest).isNotNull
        assertThat(recordedRequest?.method).isEqualTo("POST")
        assertThat(recordedRequest?.path).isEqualTo("/precompute-assignments")
        assertThat(recordedRequest?.getHeader("dd-client-token")).isEqualTo(fakeClientToken)
        assertThat(recordedRequest?.getHeader("dd-application-id")).isEqualTo(fakeApplicationId)
        assertThat(recordedRequest?.getHeader("Content-Type")).isEqualTo("application/vnd.api+json")

        // Verify request body contains our context
        val requestBody = recordedRequest?.body?.readUtf8()
        assertThat(requestBody).isNotNull()

        assertThat(requestBody).contains(fakeTargetingKey)
        assertThat(requestBody).contains(fakeAttributeKey)
        assertThat(requestBody).contains(fakeAttributeValue)
    }

    @Test
    fun `M return null W downloadPrecomputedFlags() { server error }`() {
        // Given
        mockWebServer.enqueue(
            MockResponse()
                .setResponseCode(500)
                .setBody("Internal Server Error")
        )

        val publicContext = EvaluationContext(fakeTargetingKey, emptyMap())
        val context = DatadogEvaluationContext.from(publicContext, mockInternalLogger)

        // When
        val result = networkManager.downloadPrecomputedFlags(context)

        // Then
        assertThat(result).isNull()

        // Verify error was logged
        argumentCaptor<() -> String> {
            verify(mockInternalLogger).log(
                eq(InternalLogger.Level.ERROR),
                eq(InternalLogger.Target.USER),
                capture(),
                any<IllegalArgumentException>(),
                eq(false),
                eq(null)
            )
            val message = lastValue()
            assertThat(message).isEqualTo("Failed to create request body: JSON error")
        }
    }

    @Test
    fun `M return null W downloadPrecomputedFlags() { network timeout }`() {
        // Given
        mockWebServer.enqueue(
            MockResponse()
                .setResponseCode(200)
                .setBody("{}")
                .setBodyDelay(10, TimeUnit.SECONDS) // Simulate slow response
        )

        val publicContext = EvaluationContext(fakeTargetingKey, emptyMap())
        val context = DatadogEvaluationContext.from(publicContext, mockInternalLogger)

        // When
        val result = networkManager.downloadPrecomputedFlags(context)

        // Then
        assertThat(result).isNull()

        // Verify error was logged
        argumentCaptor<() -> String> {
            verify(mockInternalLogger).log(
                eq(InternalLogger.Level.ERROR),
                eq(InternalLogger.Target.USER),
                capture(),
                any<IllegalArgumentException>(),
                eq(false),
                eq(null)
            )
            val message = lastValue()
            assertThat(message).isEqualTo("Unable to find host for site ${flagsContext.site}; we will retry later.")
        }
    }

    @Test
    fun `M return null W downloadPrecomputedFlags() { invalid JSON in request body }`() {
        // Given
        val context = DatadogEvaluationContext(
            targetingKey = fakeTargetingKey,
            attributes = mapOf("invalid" to object {}) // This will cause JSONException
        )

        // When
        val result = networkManager.downloadPrecomputedFlags(context)

        // Then
        assertThat(result).isNull()

        // Verify error was logged
        argumentCaptor<() -> String> {
            verify(mockInternalLogger).log(
                eq(InternalLogger.Level.ERROR),
                eq(InternalLogger.Target.USER),
                capture(),
                any<IllegalArgumentException>(),
                eq(false),
                eq(null)
            )
            val message = lastValue()
            assertThat(message).isEqualTo("Failed to create request body: JSON error")
        }
    }

    @Test
    fun `M return null W downloadPrecomputedFlags() { empty response body }`() {
        // Given
        mockWebServer.enqueue(
            MockResponse()
                .setResponseCode(200)
                .setBody("")
        )

        val publicContext = EvaluationContext(fakeTargetingKey, emptyMap())
        val context = DatadogEvaluationContext.from(publicContext, mockInternalLogger)

        // When
        val result = networkManager.downloadPrecomputedFlags(context)

        // Then
        assertThat(result).isNull()
    }

    @Test
    fun `M return null W downloadPrecomputedFlags() { malformed JSON response }`() {
        // Given
        mockWebServer.enqueue(
            MockResponse()
                .setResponseCode(200)
                .setBody("{ invalid json }")
        )

        val publicContext = EvaluationContext(fakeTargetingKey, emptyMap())
        val context = DatadogEvaluationContext.from(publicContext, mockInternalLogger)

        // When
        val result = networkManager.downloadPrecomputedFlags(context)

        // Then
        assertThat(result).isEqualTo("{ invalid json }") // The network manager doesn't validate JSON
    }

    @Test
    fun `M return null W downloadPrecomputedFlags() { connection refused }`() {
        // Given
        // Don't enqueue any response to simulate connection refused
        val publicContext = EvaluationContext(fakeTargetingKey, emptyMap())
        val context = DatadogEvaluationContext.from(publicContext, mockInternalLogger)

        // When
        val result = networkManager.downloadPrecomputedFlags(context)

        // Then
        assertThat(result).isNull()

        // Verify error was logged
        verify(mockInternalLogger).log(
            any(),
            any(),
            any()
        )
    }

    @Test
    fun `M verify request headers W downloadPrecomputedFlags() { all headers present }`() {
        // Given
        mockWebServer.enqueue(
            MockResponse()
                .setResponseCode(200)
                .setBody("{}")
        )

        val context = DatadogEvaluationContext(
            targetingKey = fakeTargetingKey,
            attributes = mapOf("test" to "value")
        )

        // When
        networkManager.downloadPrecomputedFlags(context)

        // Then
        val recordedRequest = mockWebServer.takeRequest(5, TimeUnit.SECONDS)
        assertThat(recordedRequest).isNotNull
        assertThat(recordedRequest?.getHeader("dd-client-token")).isEqualTo(fakeClientToken)
        assertThat(recordedRequest?.getHeader("dd-application-id")).isEqualTo(fakeApplicationId)
        assertThat(recordedRequest?.getHeader("Content-Type")).isEqualTo("application/vnd.api+json")
    }

    @Test
    fun `M verify request body structure W downloadPrecomputedFlags() { valid context }`() {
        // Given
        mockWebServer.enqueue(
            MockResponse()
                .setResponseCode(200)
                .setBody("{}")
        )

        val context = DatadogEvaluationContext(
            targetingKey = fakeTargetingKey,
            attributes = mapOf(
                "user.id" to "123",
                "user.name" to "John Doe",
                "env" to "test"
            )
        )

        // When
        networkManager.downloadPrecomputedFlags(context)

        // Then
        val recordedRequest = mockWebServer.takeRequest(5, TimeUnit.SECONDS)
        assertThat(recordedRequest).isNotNull
        
        assertThat(recordedRequest?.body).isNotNull
        val requestBody = recordedRequest?.body?.readUtf8()

        assertThat(requestBody).contains("\"targeting_key\":\"$fakeTargetingKey\"")
        assertThat(requestBody).contains("\"user.id\":\"123\"")
        assertThat(requestBody).contains("\"user.name\":\"John Doe\"")
        assertThat(requestBody).contains("\"env\":\"test\"")
        assertThat(requestBody).contains("\"type\":\"precompute-assignments-request\"")
    }
}
